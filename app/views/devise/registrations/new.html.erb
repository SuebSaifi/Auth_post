<div class="container mx-auto">
<div class="card " style="width: 18rem;">
<div class="card-body">
<h2 class="text-center fs-2 fw-bold">Sign up</h2>
<%=  simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="mb-3 row">
    <div class="col-sm-10">
        <%= f.input :name,required: true,input_html: {class: "input form-control"},wrapper: false,label_html:{class:"label form-label"}%>
    </div>

   <div class="col-sm-10">
      <%= f.input :username,required: true,input_html: {class: "input form-control"},wrapper: false,label_html:{class:"label form-label"}%>
    </div>
  </div>
   <div class="col-sm-10">
      <%= f.input :email,required: true,input_html: {class: "input  form-control"},wrapper: false,label_html:{class:"label form-label"}%>
    </div>
 
   <div class="col-sm-10">
      <%= f.input :password,required: true,input_html: {class: "input form-control"},wrapper: false,label_html:{class:"label form-label"}%>
    </div>
 
   <div class="col-sm-10">
      <%= f.input :password_confirmation,required: true,input_html: {class: "input form-control"},wrapper: false,label_html:{class:"label form-label"}%>
    </div>
</div><div class="mb-3 row">
    <div class="col-sm-10">
    <%= f.button :submit, "Sign up", class:"btn btn-info btn-sm mx-auto" %>
      </div> 
</div>
  <% end %>


<%= render "devise/shared/links" %>
</div> 
</div>