<div class="container " style="width: 240px;">
    <div class="card .align-items-center" style="width: 18rem;">
        <div class="card-body">
            <h2 class="text-center fs-2 fw-bold">Edit
                <%= resource_name.to_s.humanize %>
            </h2>
            <%=  simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="mb-3 row">
                        <div class="col">
                            <%= f.input :name,required: true,input_html: {class: " form-control"},wrapper: false,label_html:{class:"label form-label"}%>
                        </div>

                        <div class="col">
                            <%= f.input :username,required: true,input_html: {class: " form-control"},wrapper: false,label_html:{class:"label form-label"}%>
                        </div>
                    </div>
                    <div class="col">
                        <%= f.input :email,required: true,input_html: {class: "input  form-control"},wrapper: false,label_html:{class:"label form-label"}%>
                    </div>
                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for:
                            <%= resource.unconfirmed_email %>
                        </div>
                        <% end %>
                            <div class="col">
                                <%= f.input :password,required: true,input_html: {class: "input form-control"},wrapper: false,label_html:{class:"label form-label"}%>
                            </div>
                            <% if @minimum_password_length %>
                                <em><%= @minimum_password_length %> characters minimum</em>
                                <% end %>
                                    <div class="col">
                                        <%= f.input :password_confirmation,required: true,input_html: {class: "input form-control"},wrapper: false,label_html:{class:"label form-label"}%>
                                    </div>
                                    <div class="field col">
                                        <%= f.input :current_password,required: true,input_html: {class: "input form-control"},wrapper: false,label_html:{class:"label form-label"}%>
                                    </div>
        </div>
        <%= f.button :submit, "Update", class:"btn btn-info btn-sm mx-auto" %>
            <% end %>


                <%= render "devise/shared/links" %>




                    <h3 >Cancel my account</h3>

                    <p>Unhappy?
                        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
                    </p>

                    <%= link_to "Back", :back %>
    </div>
</div>